@inject LecturerService LecturerService
@inject CourseService CourseService 
@inject RatingService RatingService 

@if (_Lecturer != null){
    <PageTitle>ğŸ‘¨ğŸ»â€ğŸ« @_Lecturer.Username</PageTitle>
    <h1>ğŸ‘¨ğŸ»â€ğŸ« @_Lecturer.Username</h1>
    <h2>âœ‰ï¸ Email address: @_Lecturer.EmailAddress</h2>
    <h3>â­ Ratings:</h3>
    @if (ratings != null){
        <ul>
            <li>
